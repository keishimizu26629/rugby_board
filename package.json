{
  "name": "rugby_board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --skip-plugins @vue/cli-plugin-eslint",
    "build": "vue-cli-service build --skip-plugins @vue/cli-plugin-eslint",
    "lint": "vue-cli-service lint",
    "test": "npm run test:unit",
    "test:unit": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "docker:dev": "docker compose down && docker compose --profile dev up --build",
    "docker:prod": "docker compose down && docker compose --profile prod up --build",
    "docker:test": "docker compose down && docker compose up --build rugby-board-test",
    "docker:integration": "docker compose down && docker compose --profile integration up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "chart.js": "^3.9.1",
    "core-js": "^3.6.5",
    "firebase": "^8.10.0",
    "vue": "^2.6.14",
    "vue-chartjs": "^4.1.2",
    "vue-router": "^3.5.2",
    "vuetify": "^2.4.0",
    "vuex": "^3.6.2",
    "zlibjs": "^0.3.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@babel/eslint-parser": "^7.12.16",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.0",
    "sass": "~1.32.0",
    "sass-loader": "^10.0.0",
    "vue-cli-plugin-vuetify": "~2.4.3",
    "vue-template-compiler": "^2.6.14",
    "vuetify-loader": "^1.7.0",
    "@vue/test-utils": "^1.3.0",
    "jest": "^27.0.0",
    "@vue/cli-plugin-unit-jest": "^5.0.0",
    "vue-jest": "^3.0.7",
    "babel-jest": "^27.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "jest-environment-jsdom": "^27.0.0",
    "@firebase/rules-unit-testing": "^2.0.0",
    "firebase-mock": "^2.3.2"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
