{
  "name": "rugby_board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "serve": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "deploy": "npm run build && firebase deploy",
    "deploy:preview": "npm run build && firebase hosting:channel:deploy preview",
    "deploy:staging": "npm run build && firebase hosting:channel:deploy staging",
    "docker:dev": "docker compose down && docker compose up --build",
    "docker:prod": "docker compose down && docker compose --profile prod up --build",
    "docker:test": "docker compose down && docker compose --profile test up --build",
    "docker:integration": "docker compose down && docker compose --profile integration up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "@mdi/font": "^7.3.0",
    "axios": "^1.9.0",
    "chart.js": "^4.4.0",
    "core-js": "^3.6.5",
    "firebase": "^11.9.1",
    "pinia": "^2.1.0",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.2.0",
    "vue-router": "^4.2.0",
    "vuetify": "^3.4.0",
    "zlibjs": "^0.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.4",
    "@babel/eslint-parser": "^7.23.0",
    "@babel/preset-env": "^7.27.2",
    "@firebase/rules-unit-testing": "^3.0.0",
    "@pinia/testing": "^0.1.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/vue": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/ui": "^3.2.3",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.17.0",
    "happy-dom": "^15.11.7",
    "jsdom": "^23.0.0",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.0",
    "typescript": "^5.2.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.3",
    "vue-tsc": "^2.2.10"
  },

  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
