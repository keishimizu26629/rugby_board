{
  "name": "rugby_board",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "serve": "vite --host 0.0.0.0",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "docker:dev": "docker compose down && docker compose --profile dev up --build",
    "docker:prod": "docker compose down && docker compose --profile prod up --build",
    "docker:test": "docker compose down && docker compose up --build rugby-board-test",
    "docker:integration": "docker compose down && docker compose --profile integration up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "vue": "^3.4.0",
    "vue-router": "^4.2.0",
    "pinia": "^2.1.0",
    "vuetify": "^3.4.0",
    "@mdi/font": "^7.3.0",
    "firebase": "^10.7.0",
    "chart.js": "^4.4.0",
    "vue-chartjs": "^5.2.0",
    "axios": "^1.7.2",
    "core-js": "^3.6.5",
    "zlibjs": "^0.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "jsdom": "^23.0.0",
    "happy-dom": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "@testing-library/vue": "^8.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@pinia/testing": "^0.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.17.0",
    "@babel/eslint-parser": "^7.23.0",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.0",
    "typescript": "^5.2.0",
    "vue-tsc": "^1.8.0",
    "@firebase/rules-unit-testing": "^3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "requireConfigFile": false
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
